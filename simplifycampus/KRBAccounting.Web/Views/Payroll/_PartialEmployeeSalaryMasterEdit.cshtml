@model KRBAccounting.Web.ViewModels.Payroll.PayrollEmployeeSalaryMasterViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("EmployeeSalaryMasterEdit", "Payroll", new { controller = "Payroll" }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "success" }, new { @class = "form-horizontal from-custom online-form", id = "form-id" }))
{
    @Html.HiddenFor(x=>x.EmployeeSalaryMaster.Id)
     @Html.HiddenFor(x => x.EmployeeSalaryMaster.CreatedBy)
      @Html.HiddenFor(x => x.EmployeeSalaryMaster.CreatedOn)
            @Html.HiddenFor(x => x.OldEmployeeSalaryId)
             @Html.HiddenFor(x => x.EmployeeSalaryMaster.BranchId)
                    @Html.HiddenFor(x => x.EmployeeSalaryMaster.FiscalYearId)
    <div id="error-msg">
    </div>
    <div class="lag">
        <div class="lag">
            <div class="stack">
                <label class="label-120">
                    Employee</label>
                <div class="field">
                    @Html.DropDownListFor(m => m.EmployeeSalaryMaster.EmployeeId, Model.EmployeeList, new { @class = "input-190 input", entermsg = "Enter EmployeePostId" })
                    @Html.ValidationMessageFor(m => m.EmployeeSalaryMaster.EmployeeId)
                </div>
            </div>
        </div>
        <div class="clearfix">
        </div>
        <div class="lag">
            <div class="stack">
                <label class="label-120">
                    Basic Salary</label>
                <div class="field">
                    @Html.TextBoxFor(m => m.EmployeeSalaryMaster.BasicSalary, new { @class = "input-190 input", entermsg = "Enter Status" })
                    @Html.ValidationMessageFor(m => m.EmployeeSalaryMaster.BasicSalary)
                </div>
            </div>
             <div class="clearfix">
        </div>
            <div class="stack">
                <label class="label-120">
                    Status</label>
                <div class="field">
                    @Html.EditorFor(m => m.EmployeeSalaryMaster.Status, new { @class = "input-190 input", entermsg = "Enter Status" })
                    @Html.ValidationMessageFor(m => m.EmployeeSalaryMaster.Status)
                </div>
            </div>
        </div>
    </div>
    <div class="lag checkboxs" style="width: auto">
        <div class="stack" style="width: 100% ! important;">
            <label class="label">
                Allowance</label>
            <div class="field">
                @Html.CheckBoxList("AllowanceId", Model.CheckBoxListInfos)
                @*@Html.ValidationMessageFor(m => m.AllowanceId)*@
            </div>
        </div>
    </div>
    <div class="clearfix">
    </div>
}