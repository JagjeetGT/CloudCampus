@model KRBAccounting.Domain.Entities.ScExtraActivity
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("EditExtraActivity", "School", new { controller = "School" }, new AjaxOptions { HttpMethod = "Post", OnBegin = "Begin", OnComplete = "OnCompleteEdit" }, new { @class = "form-horizontal from-custom online-form", id = "frm-extra-activity" }))
{
    <div>
        @Html.HiddenFor(m => m.Id)
        <div class="lag">
            
            <label class="label-160">
                Code</label>
            <div class="field">
                @Html.TextBoxFor(m => m.Code, new { @class = "input-100 input", entermsg = "Enter Desc" })
                @Html.ValidationMessageFor(m => m.Code)
            </div>
        </div><div class="clearfix"></div>
        <div class="lag">
            
            <label class="label-160">
                Description</label>
            <div class="field">
                @Html.TextBoxFor(m => m.Description, new { @class = "input-253 input", entermsg = "Enter Desc" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="lag">
            <label class="label-160">
                Memo</label>
            <span class="field">
                @Html.TextAreaFor(m => m.Memo, new { @class = "input-253 input", entermsg = "Enter Memo" })
                @Html.ValidationMessageFor(m => m.Memo)
            </span>
        </div>
    </div>
}