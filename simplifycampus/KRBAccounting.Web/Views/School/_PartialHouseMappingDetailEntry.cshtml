@model IEnumerable<KRBAccounting.Domain.Entities.ScHouseMapping>  
@foreach (var item in Model)
{
    @Html.Partial("_PartialHouseMappingDetailEdit", item)
    
}
@if (Model.Count() > 0)
{
    @Html.Action("HouseDetailAdd", new {sectionId = Model.FirstOrDefault().SectionId, classId = Model.FirstOrDefault().ClassId})
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#table-examroutine-detail').tableDnD({
            onDrop: function (table, row) {
            },
            dragHandle: ".dragHandle"
        });

        $("#table-examroutine-detail tr").hover(function () {
            $(this.cells[0]).addClass('showDragHandle');
        }, function () {
            $(this.cells[0]).removeClass('showDragHandle');
        });
    });

    $(".del-row").live("click", function () {
        $(this).closest("tr").remove();
    });

</script>
