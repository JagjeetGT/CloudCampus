@model KRBAccounting.Domain.Entities.ScClassRoomMapping
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("ClassRoomMappingAdd", "School", new { controller = "School" }, new AjaxOptions { HttpMethod = "Post",OnBegin ="Begin", OnSuccess = "success" }, new { @class = "form-horizontal from-custom online-form", id = "form-id" }))
{

    <div class="lag">
        <label class="label-90">
            Building</label>
        <div class="field">
            @Html.DropDownListFor(x => x.BuildingId, Model.BuildingList)
        </div>
        <label class="label-100">
            Room
        </label>
        <div class="field">
            @Html.HiddenFor(x => x.RoomMappingId)
            <input type="text" class="modallink input input-100" href="@Url.Action("GetRoomsByRoomMappingId")" parent="BuildingId" valueid="RoomMappingId" id="building-id"/>
            @Html.ValidationMessageFor(m => m.RoomMappingId)
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="lag">
        <span class="stack">
            <label class="label-90">
                Class</label>
            <span class="field">@Html.HiddenFor(x => x.ClassId)
                <input type="text" class="modallink input input-100" href="@Url.Action("GetClasses")"  valueid="ClassId" id="class-id"/>
                @Html.ValidationMessageFor(m => m.ClassId) </span></span><span class="stack">
                    <label class="label-90">
                        Section</label>
                    <span class="field">@Html.HiddenFor(x => x.SectionId)
                        <input type="text" class="modallink input input-100" href="@Url.Action("GetSections")"  valueid="SectionId" id="section-id"/>
                        @Html.ValidationMessageFor(m => m.SectionId) </span></span>
    </div>
}