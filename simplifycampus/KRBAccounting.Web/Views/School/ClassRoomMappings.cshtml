@using KRBAccounting.Service.Models
@{
    ViewBag.Title = "Class Wise Room Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRight = (UserRight)ViewBag.UserRight;
}

<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                       Class Wise Room Setup </h1>
                    <ul class="buttons">
                        @if(userRight.Create)
                        {
                              <li><a href="Javascript:void(0)" class="isw-plus addRooms"></a></li>
                        }
                        
                      
                    </ul>
                    <div class="clear">
                    </div>
                </div>
                <div id="Rooms-list">
                  @Html.Action("ClassRoomMappingsList")
                </div>
            </div>
        </div>
    </div>
</div>


<div class="dialog" id="modalRooms" style="display: none;" title="Rooms">
    <div class="block">
    </div>
</div>





<script type="text/javascript">

    function Begin() {
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
    }
    $("#modalRooms").dialog({
        autoOpen: false,
        modal: true,
        width: 'auto',
        buttons: {
            "Ok": function () {
                Begin();
                $("#form-id").submit();
                
            },
            Cancel: function () {
                $(this).dialog("close");
            }
        }
    });

   

    function writeError(control, msg) {
        var err_msg = '<div class="alert-message error"><a class="close" href="#">×</a><p>' + msg + '</p></div>';
        $('#' + control).html(err_msg);
    }

    function getRequest(url) {
        $.ajax({
            url: url,
            context: document.body,
            success: function (data) {
                $('#modalRooms .block').html(data);
                $(this).addClass("done");
                $("#modalRooms").dialog('open');
                $.unblockUI();
            },
            error: function (err) {
                writeError('msgErrorNewLocationDetails', err);
            }
        });
    }



    $('.addRooms').live('click', function () {
        var url = '@Url.Action("ClassRoomMappingAdd", "School")';
        Begin();
        getRequest(url);
        return false;
    });

        function OnComplete() {

            $('#modalRooms .block').load("/School/ClassRoomMappingAdd");
            $("#Rooms-list").load("/School/ClassRoomMappingsList");
            $.unblockUI();
    }
    function OnCompleteEdit() {


        $("#Rooms-list").load("/School/ClassRoomMappingsList");
        $('#modalRooms').dialog("close");
        $.unblockUI();
    }

    function success(data) {
          Begin();
        if (data == "True") {
            OnComplete();
        }
        else {
            $.unblockUI();
            alert(data);
        }
    }
    function successEdit(data) {
        Begin();
        if (data == "True") {
            OnCompleteEdit();
        } else {
            alert(data);
        }
    }

    $('.editScRoom').live('click', function () {
        var RoomsId = $(this).attr("data-id");
        var url = '@Url.Action("ClassRoomMappingEdit", "School")?id=' + RoomsId;
         Begin();
        getRequest(url);
        return false;
    });

</script>



