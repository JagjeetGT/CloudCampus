@model KRBAccounting.Domain.Entities.ScSection
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("AddSection", "School", new { controller = "School" }, new AjaxOptions { HttpMethod = "Post", OnComplete = "OnComplete" }, new { @class = "form-horizontal from-custom online-form", id = "Section-frm" }))
{
    @Html.HiddenFor(x=>x.Id)
    <div style="width: 500px;">
        <div class="lag">
            <label class="label-160">
                Description</label>
            <span class="field">
                @Html.TextBoxFor(model => model.Description, new {@class = "input input-253"})
                @Html.ValidationMessageFor(model => model.Description)
            </span>
        </div>
        <div class="lag">
            <label class="label-160">
                Memo</label>
            <span class="field">
                @Html.TextAreaFor(model => model.Memo, new {@class = "input input-253"})
                @Html.ValidationMessageFor(model => model.Memo)
            </span>
        </div>
    </div>
    
}           

