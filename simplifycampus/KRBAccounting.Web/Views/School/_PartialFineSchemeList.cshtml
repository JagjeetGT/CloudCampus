@using KRBAccounting.Web.CustomFilters
@model PagedList<KRBAccounting.Domain.Entities.ScFineScheme>
<div class="block-fluid table-sorting">
    <table cellpadding="0" cellspacing="0" width="100%" class="listpopup" id="tbl-list">
        <thead>
            <tr>
                <th width="5%">
                    S.N.
                </th>
                <th width="20%">
                    Description
                </th>
                <th>
                    Class
                </th>
                <th>
                    Created By
                </th>
                <th>
                    Updated By
                </th>
                <th width="5%">
                </th>
                <th width="5%">
                </th>
            </tr>
        </thead>
        <tbody>
            @{var i = Convert.ToInt32(ViewBag.SnStart);}
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">@i
                    </td>
                    <td>@item.Description
                    </td>
                    <td>
                        @if (item.SchClass != null)
                        {
                            @item.SchClass.Description
                        }
                    </td>
                    <td>
                        @if (item.CreatedBy != null)
                        {
                            @item.CreatedBy.Username
                        }
                    </td>
                    <td>
                        @if (item.UpdatedBy != null)
                        {
                            @item.UpdatedBy.Username
                        }
                    </td>
                    <td>
                        @if (CheckPermission.GivePermission("Edit", "ScFS"))
                        {
                            <a href="javascript:void(0)" class="edit icon-edit" data-id="@item.Id" title="Edit">
                            </a>
                                                                                                              
                        }
                    </td>
                    <td>
                        @if (CheckPermission.GivePermission("Edit", "ScFS"))
                        {
                            <a href="@Url.Action("FineSchemeDelete", new { id = item.Id })" onclick = "return confirm('Are you sure you wish to delete this Fine Scheme?');" class="icon-remove" title="Delete">
                            </a>
                        }
                    </td>
                </tr>
                        i++;
            }
        </tbody>
    </table>
    <div class="pagination">
        @Html.Raw(Html.AjaxPager(Model, "FineSchemeList", "School", new PagerOptions() { PageIndexParameterName = "pageNo", ShowGoButton = false }, new AjaxOptions() { UpdateTargetId = "shift-list" }))
    </div>
</div>
