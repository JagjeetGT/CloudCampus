@model KRBAccounting.Web.ViewModels.LedgerReport.TrialBalanceOpening
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@*@Html.CustomValidationSummary("Login was unsuccessful. Please correct the errors and try again.")*@
@using (Ajax.BeginForm("OpeningTrialBalance", "ReportLedger", new { controller = "ReportLedger" }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", OnComplete = "$('#modalReportForm').modal('hide');" }, new { @class = "form-horizontal", id = "report-form" }))
{
    <div>
        <div class="lag">
            <label class="label-90">
                Normal
            </label>
            <span class="lag">
                <input type="radio" name="ReportType" value="Normal" checked />
            </span>
            <label class="label-90">
                Groupwise</label>
            <span class="lag">
                <input type="radio" name="ReportType" value="group" />
            </span>
            <label class="label-90">
                Sub Ledger</label>
            <span class="lag">
                @Html.CheckBoxFor(m => m.SubLedger, Model.SubLedger)
                @Html.ValidationMessageFor(m => m.SubLedger)
            </span>
        </div>
        <div class="clearfix">
        </div>
        <div class="lag">
            <label class="label-90">
                Branch
            </label>
            <span class="lag">
                @Html.DropDownListFor(x => x.BranchId, Model.BranchList, "All", new { @class = "input-90" })
            </span>
        </div>
    </div>
 
}
<script type="text/javascript">
 
</script>
