@model KRBAccounting.Web.ViewModels.ARAP.PeriodicAnalysisFormViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@*@Html.CustomValidationSummary("Login was unsuccessful. Please correct the errors and try again.")*@
@using (Ajax.BeginForm("PeriodicAnalysis", "ARAP", new { controller = "ARAP" }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", OnComplete = "$('#modalReportForm').modal('hide');" }, new { @class = "form-horizontal", id = "periodic-analysis-form" }))
{
    <div>
        <div class="clearfix">
        </div>
        <div class="lag">
            <label class="label-60">
                Type</label>
            <span class="field">
                @Html.DropDownListFor(m => m.Type, Model.TypeList, new { @class = "input-100" })
                @Html.ValidationMessageFor(m => m.Type)
            </span>
        </div>
        <div class="clearfix">
        </div>
        <div class="lag ">
            <label class="label-60">
                Year</label>
            <span class="field">
                @Html.DropDownListFor(m => m.Year, Model.YearList, new { @class = "input-100" })
                @Html.ValidationMessageFor(m => m.Year)
            </span>
        </div>
        <div class="clearfix">
        </div>
        <div class="lag month">
            <label class="label-60">
                Month</label>
            <span class="lag" style="width: 300px">
                @Html.DropDownListFor(m => m.Month, Model.MonthList, new { @class = "input-100" })
                @Html.ValidationMessageFor(m => m.Month)
            </span>
        </div>
        <div class="clearfix"></div>
        <div class="lag">
            <label class="label-60">
                Amount In</label>
            <span class="lag" style="width: 300px">
                 @Html.DropDownListFor(m => m.Divisor, Model.DivisorList, new { @class = "input-100" })
             @Html.ValidationMessageFor(m => m.Divisor)
            </span>
        </div>
    </div>
    <div class="clearfix">
    </div>
}

