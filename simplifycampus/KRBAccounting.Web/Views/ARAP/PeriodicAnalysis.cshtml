@model KRBAccounting.Web.ViewModels.ARAP.PeriodicAnalysisFormViewModel
@{
    ViewBag.Title = "Periodic Analysis";
}
<div class="workplace">
    <div class="row-fluid">
        <div class="span12">
            <div class="head">
                <h1>
                   Periodic Analysis</h1>
                <ul class="buttons">
                    <li><a href="javascript:void(0)" id="generate_report" title="Generate New Report"
                        class="isw-refresh"></a></li>
                    <li><a href="@Url.Action("PdfPeriodicAnalysis", "ARAP")" target="_blank" title="Export to Pdf" class="isw-pdf" >
                    </a></li>
                    <li><a href="@Url.Action("ExcelPeriodicAnalysis", "ARAP")" target="_blank" title="Export to Excel" class="isw-excel">
                    </a></li>
                    <li><a id="print" title="Print" class="isw-print"></a></li>
                </ul>
                <div class="clear">
                </div>
            </div>
            <div id="report" class="block-fluid">
            </div>
        </div>
    </div>
</div>
<div class="dialog" id="modalReportForm">
    <div class="block">@Html.Partial("_PeriodicAnalysisReportForm", Model)</div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $("#modalReportForm").dialog('open');});
        $("#generate_report").live("click", function () {
            $("#modalReportForm").dialog('open');
        });
        $("#modalReportForm").dialog({
            autoOpen: true,
            modal: true,
            width: 'auto',
            title: 'Periodic Analysis Report',
            buttons: {
                "OK": function () {
                    $("#periodic-analysis-form").submit();
                    $(this).dialog('close');
                },
                Cancel: function () {
                    $(this).dialog("close");
                }
            }
        });
        $("#Type").change(function () {
            var type = $("#Type").val();
            if (type == 1) {
                $(".month").show();
                $(".month").removeAttr("disabled");
            } else {
                $(".month").hide();
                $(".month").attr("disabled", "disabled");
            }
        });
   


</script>