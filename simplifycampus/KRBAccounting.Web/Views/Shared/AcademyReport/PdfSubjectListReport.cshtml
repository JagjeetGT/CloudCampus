@using KRBAccounting.Enums
@using KRBAccounting.Service
@using KRBAccounting.Service.Helpers
@model KRBAccounting.Web.ViewModels.Report.ReportSubjectListReportViewModel
@{
    decimal drGrandTotal = 0;
    decimal crGrandTotal = 0;
    decimal grandTotalBalance = 0;
}
<link rel="stylesheet" type="text/css" media="print" href="/Content/Style.css" />
<link rel="stylesheet" type="text/css" media="print" href="/Content/bootstrap/css/bootstrap.css" />
<div class="clearfix">
</div>
<div class="ReportHeader" style="text-align: center">
    @Html.Partial("_PartialReportHeader", Model.ReportHeader)
</div>
<div class="ReportList">
    <table border="0.5" style="font-size: 8px;">

        <thead>
            <tr bgcolor="#E6EEEE" align="center" style="font-weight: bold">
                <th width="5%">
                    S.N.
                </th>
                <th colspan="3">
                    Description
                </th>
                <th>
                    Code
                </th>
               
                <th>
                    Class Type
                </th>
                <th>
                    Type
                </th>
             
                
                <th>
                    Memo
                </th>
            </tr>
        </thead>
        @{
            var i = 1;
        }
        @foreach (var item in Model.SubjectList)
        {
            <tr align="center">
                <td style="text-align:center">@i
                </td>
                <td style="text-align:center" colspan="3">
                    @item.Description
                </td>
                <td style="text-align:center">
                    @item.Code
                </td>
               
                <td style="text-align:center">
                    @Enum.GetName(typeof(ClassType), item.ClassType)
            </td>
                <td style="text-align:center">
                    @Enum.GetName(typeof(SubjectType), item.Type)
                </td>
                
                
                <td>@item.Memo
                </td>
            </tr>
            i++;
        }
    </table>
</div>
