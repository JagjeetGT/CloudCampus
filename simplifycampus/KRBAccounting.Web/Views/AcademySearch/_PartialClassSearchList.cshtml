@using KRBAccounting.Service.Models
@using KRBAccounting.Web.CustomFilters
@model IEnumerable<KRBAccounting.Domain.Entities.SchClass>
@{var i = 1;
  var userRight = (UserRight)ViewBag.UserRight;}
<div class="block-fluid table-sorting">
    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="bldng-list">
        <thead>
            <tr>
                <th width="5%">
                    S.N.
                </th>
                <th width="20%">
                    Code
                </th>
                <th>
                    Class Description
                </th>
                <th>
                    Incharge
                </th>
                <th width="5%">
                </th>
                <th width="5%">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">@i
                    </td>
                    <td>@item.Code
                    </td>
                    <td>@item.Description
                    </td>
                    <td>@item.Incharge
                    </td>
                    <td>
                        @if (userRight.Edit)
                        {
                            <a href="javascript:void(0);" class="editClass icon-edit" data-id="@item.Id"></a>
                        }
                    </td>
                    <td>
                        @if (userRight.Delete)
                        {
                            <a href="javascript:void(0)" class="deleteClass icon-remove" data-id="@item.Id" title="Delete">
                            </a>
                        }
                    </td>
                </tr>
                        i++;
            }
        </tbody>
    </table>
    
</div>
