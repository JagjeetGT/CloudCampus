@using KRBAccounting.Enums
@using KRBAccounting.Service.Models
@using KRBAccounting.Web.CustomFilters
@model KRBAccounting.Web.ViewModels.Academy.AcademicsExamMarkSetupViewModel
@{
    var userRight = (UserRight)ViewBag.UserRight;
        
    }
<div class="block-fluid table-sorting">
    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tbl-list">
        <thead>
            <tr>
                <th width="5%">S.N.</th>
                <th>
                    Exam
                </th>
                <th>
                    Code
                </th>
                <th>
                    Class
                </th>
                <th>
                    Code
                </th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody>
            @{var i = 1;}
            @foreach (var item in Model.ExamMarkSetupGrouping)
            {
                <tr class="_detail">
                    <td align="center">@i</td>
                    <td>
                        @{
                            var scExam = item.FirstOrDefault().ScExam;
                        }
                        @if (scExam != null)
                        {
                            @scExam.Description
                        }

                    </td>
                    
                    <td>
                        @{
                            var exam = item.FirstOrDefault().ScExam;
                        }
                        @if (exam != null)
                        {
                            @exam.Code
                        }

                    </td>
                    <td>
                        @{
                            var schClass = item.FirstOrDefault().Class;
                        }
                        @if (schClass != null)
                        {
                            @schClass.Description
                        }

                    </td>
                    
                    <td>
                        @{
                            var @class = item.FirstOrDefault().Class;
                        }
                        @if (@class != null)
                        {
                            @(@class.Code)
                        }

                    </td>
                     
                    <td>
                       @if (userRight.Edit)
                       {
                           <a href="#" class="editExam icon-edit" data-classid="@item.FirstOrDefault().ClassId" data-examid="@item.FirstOrDefault().ExamId" title="Edit">
                           </a>
                       }
                    </td>
                    @*<td>
                        <a href="@Url.Action("ExamMarkSetupDelete", new { examId = item.FirstOrDefault().ExamId,classId=item.FirstOrDefault().ClassId })" onclick = "return confirm('Are you sure you wish to delete this Exam mark Setup?');" class=" "  title="Delete">
                        </a>
                    </td>*@
                </tr>
                i++;
            }
        </tbody>
    </table><div class="clearfix"></div>
</div>
