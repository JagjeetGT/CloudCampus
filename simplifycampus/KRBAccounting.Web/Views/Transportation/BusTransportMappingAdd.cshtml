@using KRBAccounting.Domain.Entities
@model KRBAccounting.Web.ViewModels.Academy.BusTransportationMappingViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("BusTransportMappingAdd", "Transportation", new { controller = "Transportation" }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnComplete" }, new { @class = "form-horizontal from-custom online-form", id = "formTransportationMapping-id" }))
{
    <div id="error-msg"></div>
    @*<div style="width: 1000px">*@
        <div class="lag">
            <span class="stack">
                <label class="label-120">
                    Route
                </label>
                <span class="field">
                    @Html.HiddenFor(m => m.ScTransportMapping.BusRouteCode, new { @class = "input" })
                    <input type="text" class="modallink input" href="@Url.Action("GetRouteList", "Transportation")" valueid="ScTransportMapping_BusRouteCode" id="BusRouteCode" />
                    @Html.ValidationMessageFor(m => m.ScTransportMapping.BusRouteCode)
                </span>
            </span>

            <span class="stack">
                <label class="label-120">
                    Class
                </label>
                <span class="field">
                    @Html.HiddenFor(m => m.ScTransportMapping.ClassId, new { @class = "input" })
                    <input type="text" class="modallink input" href="@Url.Action("GetClasses", "School")" valueid="ScTransportMapping_ClassId" id="ClassId" />
                    @Html.ValidationMessageFor(m => m.ScTransportMapping.ClassId)
                </span>
            </span><span class="stack">
                <label class="label-120">
                    Section
                </label>
                <span class="field">
                    @Html.HiddenFor(m => m.ScTransportMapping.SectionId, new { @class = "input" })
                    <input type="text" class="modallink input" href="@Url.Action("GetSections", "School")" valueid="ScTransportMapping_SectionId" id="SectionId" />
                    @Html.ValidationMessageFor(m => m.ScTransportMapping.SectionId)
                </span>
            </span>
        </div>
        @*<hr />*@
        <div class="clearfix"></div>
    <div class="lag detailEntryTable" style="height: 250px;">
        <table class="table-bordered" id="bus-transportmapping-list" width="1000px">
            <tr class="nodrop nodrag">
                <th>
                </th>
                <th>
                    Student
                </th>
                <th>
                    Registration No
                </th>
                <th>
                    Bus Stop From
                </th>
                <th>
                    Bus Stop To
                </th>
                <th>
                    Status
                </th>
                @if (Model.SystemControl.DateType == 1)
                {
                    <th>
                        Start Date (MM/dd/YYYY)
                    </th>
                }
                else
                {
                    <th>
                        Start Miti (YYYY/MM/dd)
                    </th>
                }
                @if (Model.SystemControl.DateType == 1)
                {
                    <th width="100px">
                        End Date (MM/dd/YYYY)
                    </th>
                }
                else
                {
                    <th width="100px">
                        End Miti (YYYY/MM/dd)
                    </th>
                }
                <th>
                    Amount
                </th>
                <th>
                    Narration
                </th>
            </tr>
            @*               @Html.Partial("BusTransportMappingInfoAdd")*@
        </table>

    </div>
    @*</div>*@
            <hr />
    <div class="clearfix"></div>
        <div class="lag">
            @*<span class="stack">*@
                <label class="label-120">
                    Remarks</label>
            @*</span>*@
            <div class="field">
                @Html.TextBoxFor(m => m.ScTransportMapping.Remarks, new { @class = "input-320" })
                @Html.ValidationMessageFor(m => m.ScTransportMapping.Remarks)
            </div>
        </div>
    

}
