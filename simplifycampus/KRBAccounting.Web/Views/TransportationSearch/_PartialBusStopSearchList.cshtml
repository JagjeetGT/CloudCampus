@using KRBAccounting.Service.Models
@using KRBAccounting.Web.CustomFilters
@model IEnumerable<KRBAccounting.Domain.Entities.ScBusStop>
@{
    var userRight = (UserRight)ViewBag.UserRight;
}
<div class="block-fluid table-sorting">
    <table cellpadding="0" cellspacing="0" width="100%" class="listpopup" id="tbl-list">
        <thead>
            <th width="5%">
                S.N.
            </th>
            <th>
                Description
            </th>
            <th>
                Memo
            </th>
            <th width="7%">
            </th>
          
        </thead>
        <tbody>
            @{var i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">@i
                    </td>
                    <td>@item.Description
                    </td>
                    <td>@item.Memo
                    </td>
                    <td>
                        @if (userRight.Edit)
                        {
                            <a href="#" class="editScBusStop icon-edit" data-id="@item.Id" title="Edit"></a>
                        }
                        @if (userRight.Delete)
                        {
                            <a href="javascript:void(0)" class="deleteScBusStop icon-remove" data-id="@item.Id" title="Delete" >
                            </a>
                        }
                    </td>
                </tr>
                        i++;
            }
        </tbody>
    </table>
  
</div>
