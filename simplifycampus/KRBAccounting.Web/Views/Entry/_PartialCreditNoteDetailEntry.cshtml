@model KRBAccounting.Web.ViewModels.Entry.CreditNoteDetailEntryViewModel
<tr class="debitnote-detail-entry detail-entry">
    @using (Html.BeginCollectionItem("creditNoteDetailEntry"))
    {
         <td class="dragHandle">&nbsp;&nbsp;&nbsp;</td>
        <td>
            @Html.HiddenFor(x => x.GlCode, new { @class = "hdn_ledger_Id" })
            <input type="text" class = "modallink text_ledger input-305 input" href="@Url.Action("GetLedgerCategoryOther", "Master")" title="General Ledger"  entermsg = "Press F1 for existing Account list." />
        </td>
        if(Model.EntryControl!=null&&Model.EntryControl.SubLedger)
        {
            <td>
            @Html.HiddenFor(x => x.SubLedgerId, new { @class = "hdn_subledger_Id" })
            <input type="text" class = "modallink text_subledger input-80 input" href="@Url.Action("GetSubLedger", "Master")"  entermsg = "Press F1 for existing Account list." />
        </td>
        }
        <td>
            @Html.TextBoxFor(x => x.Amount, new { @class = "input-80 amt input numberonly", entermsg = "Enter Voucher Amount." })
        </td>
        <td>
            @Html.TextBoxFor(x => x.Narration, new { @class = "narration input-235 input", href = "/Entry/GetCreditNoteDetailEntry", entermsg = "Enter Narration or press F1 for existing Narration List." })
        </td>
        <td>
            <img src="../../Content/img/delete.png" width="15px" class="del-row">
        </td>
        
    }
</tr>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table-cash-bank-detail').tableDnD({
            onDrop: function (table, row) {
            },
            dragHandle: ".dragHandle"
        });

        $("#table-cash-bank-detail tr").hover(function () {
            $(this.cells[0]).addClass('showDragHandle');
        }, function () {
            $(this.cells[0]).removeClass('showDragHandle');
        });
    })
</script>
