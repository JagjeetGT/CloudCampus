                <div class="lag">
                    <span class="stack">
                        <label class="label-90">
                            Short Name</label>
                        @Html.TextBoxFor(x => x.ShortName, new { @class = "input-100 input", disabled = "disabled" })
                    </span><span class="stack" style="padding-left: 40px">
