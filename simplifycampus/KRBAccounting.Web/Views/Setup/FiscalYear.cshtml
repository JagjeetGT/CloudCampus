@using KRBAccounting.Service.Models
@{
    ViewBag.Title = "Fiscal Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRight = (UserRight)ViewBag.UserRight;
}

<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                        Fiscal Years</h1>
                         @if (userRight.Create)
                         {
                             <ul class="buttons">
                                 <li><a href="#" class="isw-plus addFiscalYear"></a></li>
                             </ul>
                         }
                    <div class="clear">
                    </div>
                </div>
                <div id="FiscalYear-list">
                    @Html.Action("FiscalyearList")
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dialog" id="modalFiscalYear" style="display: none;" title="Fiscal Year(+)">
    <div class="block">
    </div>
</div>
<script type="text/javascript">
    function Begin() {
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
    }
    $("#modalFiscalYear").dialog({
        autoOpen: false,
        modal: true,
        width: 'auto',
        buttons: {
            "Ok": function () {
                Begin();
                $("#fical-year-form").submit();
                $(this).dialog("close");
                $.unblockUI();
            },
            Cancel: function () {
                $(this).dialog("close");
            }
        }
    });
    
    function writeError(control, msg) {
        var err_msg = '<div class="alert-message error"><a class="close" href="#">×</a><p>' + msg + '</p></div>';
        $('#' + control).html(err_msg);
    }
    function getRequest(url) {
        $.ajax({
            url: url,
            context: document.body,
            success: function (data) {
                $('#modalFiscalYear .block').html(data);
                $(this).addClass("done");
                $("#modalFiscalYear").dialog('open');
                $.unblockUI();

            },
            error: function (err) {
                writeError('msgErrorNewLocationDetails', err);
            }
        });
    }

    $('a.addFiscalYear').live('click', function () {
        var url = '@Url.Action("FiscalyearAdd", "Setup")';
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
        getRequest(url);

        return false;
    });
    $('a.editFiscalYear').live('click', function () {
        var id = $(this).attr("data-id");
        var url = '@Url.Action("FiscalyearEdit", "Setup")/' + id;
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
        getRequest(url);

        return false;
    });
    $('a.setFiscalYear').live('click', function () {
        var id = $(this).attr("data-id");
        var url = '@Url.Action("SetDefautFiscalYear", "Setup")/' + id;
        $.post(url, function () {
            $("#FiscalYear-list").load("/Setup/FiscalyearList");
        });


        return false;
    });
    $('#saveFiscalYear').live('click', function () {
        $("#fical-year-form").submit();
    });

    function OnComplete() {
        $('#modalFiscalYear .modal-body').load("/Setup/FiscalyearAdd");
        $("#FiscalYear-list").load("/Setup/FiscalyearList");
        $.unblockUI();
    }
    function OnCompleteEdit() {
        $('#modalFiscalYear').modal('hide');
        $("#FiscalYear-list").load("/Setup/FiscalyearList");
        $.unblockUI();
    }
</script>
