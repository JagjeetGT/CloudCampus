                    <label class="input-64">
                        Type</label>
                    <span class="field">
                        @Html.DropDownListFor(m => m.DocumentNumberingScheme.DocType, Model.Type)
                    </span></span>
              @*  <fieldset class="input-315" style="margin: 10px;">
                    <legend>Valid Date</legend>
                    <div class="lag">
                        <span class="lag">
                            <label class="input-64">
