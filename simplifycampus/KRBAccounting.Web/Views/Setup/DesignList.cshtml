@using KRBAccounting.Service.Helpers
@model IEnumerable<KRBAccounting.Domain.Entities.Design>

<div class="block-fluid table-sorting">
    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tbl-list">
        <thead>
            <tr>
                <th width="5%">
                    S.N.
                </th>
                <th>
                 Name
                </th>
                <th>
                    Module Name
                </th>
                <th>
                    Header
                </th>
                <th>
                    Body
                </th>
                <th>
                   Footer
                </th>
                
            </tr>
        </thead>
        <tbody>
            @{var i = 1;}
            @foreach (var item in Model)
            {
                var ModuleEnum = new StringEnum(typeof(KRBAccounting.Enums.ModuleEnum));
                <tr>
                    <td align="center">@i
                    </td>
                    <td>@item.Name
                    </td>
                    <td>@ModuleEnum.GetStringValue(item.Module)
                    </td>
                    <td>@item.Header
                    </td>
                    <td>@item.Body
                    </td>
                    <td>
                        @item.Footer
                    </td>
                   
                </tr>
                        i++;
            }
        </tbody>
    </table>
</div>
