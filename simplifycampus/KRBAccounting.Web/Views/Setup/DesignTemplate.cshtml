@model KRBAccounting.Domain.Entities.Design
@*<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>*@
<div class="workplace">
    <div class="row-fluid"><div class="block-fluid">
        @using (Ajax.BeginForm("CertificateTemplateEditor", "School", new { controller = "School" }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "success" }, new { @class = "form-horizontal from-custom online-form", id = "CertificateTemplate-form" }))
        {
            <div>
                <div class="alert alert-error">
                    <h4>
                        Please Notify!!</h4>
                    Do Not Change Data which is specified inside < >.
                </div>
                <div class="lag">
                    <label style="width: 200px;">
                        Header
                    </label>
                    <div class="clearfix">
                    </div>
                    <span class="field">
                        @Html.TextAreaFor(m => m.Header, new { @class = "input wysiwyg", entermsg = "Enter Description" })
                    </span>
                </div>
                <div class="clear">
                </div>
                <div class="lag">
                    <label style="width: 200px;">
                        Body
                    </label>
                    <div class="clearfix">
                    </div>
                    <span class="field">@Html.TextAreaFor(m => m.Body, new { @class = "input wysiwyg", entermsg = "Enter Description" })
                    </span>
                </div>
                <div class="clear">
                </div>
                <div class="lag">
                    <label style="width: 200px;">
                        Footer
                    </label>
                    <div class="clearfix">
                    </div>
                    <span class="field">@Html.TextAreaFor(m => m.Footer, new { @class = "input wysiwyg", entermsg = "Enter Description" })
                    </span>
                </div>
                <div class="clear">
                </div>
                <div class="lag">
                    <input type="button" class="btn save-buttons" value="Save" />
                </div>
            </div>
        }
    </div>
</div></div>
<script>
    $(document).ready(function () {
        var editor = $(".wysiwyg").cleditor({ width: "100%", height: "100%" })[0].focus();
        editor.refresh();
    });

</script>
