@model KRBAccounting.Domain.Entities.ScMessage
@{
    ViewBag.Title = "StudentMsg";
}
<script src="/Content/social/assets/js/wysihtml5/dist/wysihtml5-0.3.0.min.js"></script>
<script src="/Content/social/assets/js/bootstrap-wysihtml5/src/bootstrap-wysihtml5.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("StudentMsg", "StudentProfile", new {controller="StudentProfile"},new AjaxOptions(){HttpMethod = "POST", OnSuccess = "complete"}, new { @id="student-form"}))
{
    @Html.HiddenFor(x => x.ReceiverId)
    @Html.HiddenFor(x => x.SenderId)


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        ×</button>
    <h3 id="myModalLabel">
        Message - @Model.MsgTitle</h3>
</div>
<div class="modal-body">
    <div class="control-group">
        <label class="control-label" style="float: left">
            Subject
        </label>
        <div class="controls">
            @Html.TextBoxFor(x => x.MsgSubject, new { @style = "width:87%" })
              @Html.ValidationMessageFor(x => x.MsgSubject)
        </div>
    </div>
    <div class="clearfix">
    </div>
    <div class="controls">
        @Html.TextAreaFor(x => x.MsgBody, new { @style = "width:97% ; height:10%" })
         @Html.ValidationMessageFor(x => x.MsgBody)
    </div>
</div>
    <div class="modal-footer">
        <button  class="btn btn-success btn-submit-form">
            Send</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">
            Close</button>
    
    </div>
}
<script type="text/javascript" language="javascript">
        /*<![CDATA[*/
        $(function() {
            $('#MsgBody').wysihtml5({
                "stylesheets": ["/templates/social/assets/js/bootstrap-wysihtml5/lib/css/wysiwyg-color.css"]
            });
        });
     
</script>
