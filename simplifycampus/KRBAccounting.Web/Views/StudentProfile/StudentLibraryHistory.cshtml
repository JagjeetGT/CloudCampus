@using KRBAccounting.Service
@model IEnumerable<KRBAccounting.Web.ViewModels.StudentProfile.StudentLibraryHistory>

@{
    ViewBag.Title = "Library History ";
}


<div class="row-fluid">
    <h4 class="page-title">
        <div class="social-box">
            <div class="body">
                Library Histroy 
            </div>
        </div>
    </h4>
</div>
<div class="row-fluid">
         <div class="social-box">
<table class="table table-striped" style="font-size: 14px">
    <thead>
        <tr>
            <th>#</th>
            <th>Book Name</th>
            <th>Publisher</th>
            <th>Edition</th>
            <th>Issue Date</th>
            <th>Return Date</th>
            <th>Fine</th>
                         

        </tr>
    </thead>
    <tbody>
        @{
            int SN0 = 1;
        }
        @foreach (var item in Model)
        {
            <tr style="font-size: 12px">
                <td>@SN0</td>
                <td>@item.BookName</td>
                <td>@item.Publisher</td>
                <td>@item.Edition</td>
                <td>@item.IssueDate.ToShortDateString()</td>
                @if (item.IsReturn)
                {
                    if(item.ReturnDate != null)
                        {
                            <td>@Convert.ToDateTime(item.ReturnDate)</td>
                        }
                        
                    <td>@item.Fine</td>
                                        
                }
                else
                {
                    <td></td>
                    <td></td>

                }
                                       

            </tr>
            SN0++;

        }
                                
    </tbody>
</table>
</div>
</div>