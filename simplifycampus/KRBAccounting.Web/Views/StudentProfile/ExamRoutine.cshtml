@using KRBAccounting.Enums
@using KRBAccounting.Service
@using KRBAccounting.Service.Helpers
@model IEnumerable<KRBAccounting.Domain.Entities.ScExamRoutine>
<link rel="stylesheet" type="text/css" media="print" href="/Content/Style.css" />
<link rel="stylesheet" type="text/css" media="print" href="/Content/bootstrap/css/bootstrap.css" />
<div class="clearfix">
</div>


@if (!Model.Any())
{
    <div class="row-fluid">
    <h4 class="page-title">
        <div class="social-box">
            <div class="body">
                Exam Routine
            </div>
        </div>
    </h4>
</div>
<div class="row-fluid">
    <div class="social-box">
        <table class="table table-condensed">
       The Exam Routine wasn't published yet.
          
        </table>
        <div class="clearfix">
        </div>
    </div>
</div>
}
else
{
    <div class="row-fluid">
    <h4 class="page-title">
        <div class="social-box">
            <div class="body">
                Exam Routine (Class: @Model.FirstOrDefault().Class.Description, Exam: @Model.FirstOrDefault().ScExam.Description)
            </div>
        </div>
    </h4>
</div>
    <div class="row-fluid">
    <div class="social-box">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Subject
                </th>
                <th>
                    Result System
                </th>
                <th>
                    Evaluation
                </th>
                <th>
                    Class Type
                </th>
                <th>
                    Date (MM/DD/YYYY)
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
                <th>
                    Hours
                </th>
                <th>
                    Narration
                </th>
            </tr>
            </thead>
            @{var sn = 1;}
            @foreach (var item in Model)
            {
                <tr style="font-size: 13px">
                    <td>@sn</td>
                    <td>@item.Subject.Description</td>
                     <td>@Enum.GetName(typeof(ResultSystem), item.ResultSystem)</td>
                    <td>@Enum.GetName(typeof(YesNoEnum), item.EvaluateForType)</td>
                
                  <td>@Enum.GetName(typeof(ClassType), item.ExamType)</td>
                    <td>
                        @if (item.ExamDate != null)
                        {
                             @Convert.ToDateTime(item.ExamDate).ToShortDateString()
                            
                        }
                        
                       
                    </td>
                    <td>@item.StartTime</td>
                    <td>@item.EndTime</td>
                    <td>@item.ExamHour</td>
                    <td>@item.Remarks</td>
                </tr>
                   sn++;

            }
               
          
        </table>
        <div class="clearfix">
        </div>
    </div>
</div>
}

