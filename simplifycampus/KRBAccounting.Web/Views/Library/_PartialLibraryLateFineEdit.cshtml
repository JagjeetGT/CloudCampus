@model KRBAccounting.Domain.Entities.ScLibraryLateFine
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                @using (Ajax.BeginForm("LibraryLateFineEdit", "Library", new { controller = "Library" }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "successEdit" }, new { @class = "form-horizontal form-custom", id = "lateFine-form" }))
                {@Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.CreatedBy)
                    @Html.HiddenFor(x => x.CreatedOn)
                    <div class="lag">
                        <div class="stack">
                            <label class="label-90">
                                Day Start</label>
                            <div class="field">@Html.TextBoxFor(m => m.DayStart, new { @class = "input-100 input", entermsg = "Enter Start Date" })
                                @Html.ValidationMessageFor(m => m.DayStart)
                            </div>
                        </div>
                        <div class="stack">
                            <label class="label-90">
                                Day End</label>
                            <div class="field">
                                @Html.TextBoxFor(m => m.DayEnd, new { @class = "input-100 input", entermsg = "Enter EndDate" })
                                @Html.ValidationMessageFor(m => m.DayEnd)
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">
                    </div>    
                    <div class="lag">
                        <label class="label-90">
                            Title</label>
                        <div class="field">
                            @Html.TextBoxFor(m => m.Title, new { @class = "input-100 input", entermsg = "Enter Title" })
                            @Html.ValidationMessageFor(m => m.Title)
                        </div>
                        <label class="label-90">
                            Amount</label>
                        <div class="field">
                            @Html.TextBoxFor(m => m.Amount, new { @class = "input-100 input", entermsg = "Enter Amount" })
                            @Html.ValidationMessageFor(m => m.Amount)
                        </div>
                    </div>
                    <div class="clearfix">
                    </div>
@* <div class="clearfix">
                        </div>
                        <div>
                            <input type="submit" class="btn" value="Submit" /></div>*@  
                }
            </div>
            </div>
        </div>
    </div>

