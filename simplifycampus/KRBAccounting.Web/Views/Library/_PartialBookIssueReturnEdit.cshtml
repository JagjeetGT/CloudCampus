                    @Html.ValidationMessageFor(m => m.BookIssueReturn.IssuedTo) </span></span>
    <input type="button" value="Show" class="btn" onclick="GetDetail()" />
    </div>
    <div class="clearfix">
    </div>
    <div class="lag">
        <span class="stack">
            <label class="label-90">
                Card Type</label>
            <span class="field">@Html.DropDownListFor(m => m.BookIssueReturn.CardType, Model.BookIssueReturn.Cardlist, new { @class = "input-100 input", entermsg = "Enter CardType" })
                @Html.ValidationMessageFor(m => m.BookIssueReturn.CardType) </span></span><span class="stack">
                    <label class="label-90">
                        Book Title</label>
                    <span class="field">@Html.HiddenFor(m => m.BookIssueReturn.BookTitleId)
