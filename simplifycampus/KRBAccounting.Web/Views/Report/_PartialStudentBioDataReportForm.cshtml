@model KRBAccounting.Web.ViewModels.Report.ReportStudentBioDataViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Html.BeginForm("StudentBioData", "Report", new { controller = "Report" }, FormMethod.Post, new { @class = "form-horizontal", id = "report-form" }))
{
    <div class="lag">
        <div class="lag">
            <div class="lag">
                <label class="label-90">
                    Class</label>
                <span class="field">
                    @Html.DropDownListFor(m => m.ClassId, Model.ClassList, new { @class = "input-187 chzn-select" })
                    @Html.ValidationMessageFor(m => m.ClassId)
                </span>
            </div>
            <div class="clearfix"></div>
            <div class="lag">
                     <label class="label-90">
                    Student</label>
                <span class="field">
                    @Html.DropDownListFor(m => m.StudentId, Model.StudentList, new { @class = "input-187 chzn-select" })
                    @Html.ValidationMessageFor(m => m.StudentId)
                </span>
           </div>
        </div>
    </div>

  
}
