@model KRBAccounting.Web.ViewModels.Report.ReportExamAttendanceFormViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Html.BeginForm("ExamAttendanceReport", "Report", new { controller = "Report" }, FormMethod.Post, new { @class = "form-horizontal", id = "report-form" }))
{
   
        
    <div class="clearfix">
    </div>
    <div class="lag">
        <label class="label-90">
            Class</label>
        <span class="field">
            @Html.DropDownListFor(m => m.ClassId, Model.ClassList, new { @class = "input-187 chzn-select " })
            @Html.ValidationMessageFor(m => m.ClassId)
        </span>
        <label class="label-90">
            Section</label>
        <span class="field">
            @Html.DropDownListFor(m => m.SectionId, Model.SectionList, new { @class = "input-187 chzn-select" })
            @Html.ValidationMessageFor(m => m.SectionId)
        </span>
    </div>
    <div class="clearfix">
    </div>
    <div class="lag">
        <label class="label-90">
            Exam</label>
        <span class="field">
            @Html.DropDownListFor(m => m.ExamId, Model.ExamList, new { @class = "input-187 chzn-select" })
            @Html.ValidationMessageFor(m => m.ExamId)
        </span>
    </div>
}
