@model KRBAccounting.Web.ViewModels.Report.ReportStudentCertificateViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Html.BeginForm("Certificates", "Report", new { controller = "Report" }, FormMethod.Post, new { @class = "form-horizontal", id = "report-form" }))
{
    <div class="lag"style="width: 365px">
        <div class="lag">
            <label class="label-120">
                Class</label>
            <span class="field">
                @Html.DropDownListFor(m => m.ClassId, Model.ClassList, new { @class = "input-187 chzn-select" })
                @Html.ValidationMessageFor(m => m.ClassId)
            </span>
        </div>
        <div class="clearfix">
        </div>
        <div class="lag">
            <label class="label-120">
                Certificate</label>
            <span class="field">
                @Html.DropDownListFor(m => m.Certificatetype, Model.CertificateTypeList, new { @class = "input-187 chzn-select" })
                @Html.ValidationMessageFor(m => m.Certificatetype)
            </span>
        </div>
         <div class="clearfix">
    </div>
        <div class="lag">
            <label class="label-120">
                Certificate</label>
            <span class="field">
                @Html.DropDownListFor(m => m.StudentId, Model.StudentList, new { @class = "input-187 chzn-select" })
                @Html.ValidationMessageFor(m => m.StudentId)
            </span>
        </div>
    </div>
   
  
}
