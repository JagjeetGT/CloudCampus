@model KRBAccounting.Web.ViewModels.Report.ReportStudentLedgerFromViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Html.BeginForm("StudentLedgerReport", "Report", new { controller = "Report" }, FormMethod.Post, new { @class = "form-horizontal", id = "report-form" }))
{
    <div class="lag">
        <div class="lag">
            <div class="lag">
                <label class="label-90">
                    Date From</label>
                <span class="field">
                    @Html.DateTextBoxFor(m => m.DateFrom, new { @class = "input-120" })
                    @Html.ValidationMessageFor(m => m.DateFrom)
                </span>
                <label class="label-53">
                    Date To</label>
                <span class="field">
                    @Html.DateTextBoxFor(m => m.DateTo, new { @class = "input-120" })
                    @Html.ValidationMessageFor(m => m.DateTo)
                </span>
            </div>
            <div class="clearfix">
            </div>
            <div class="lag">
                <label class="label-90">
                    Class</label>
                <span class="field">
                    @Html.DropDownListFor(m => m.ClassId, Model.ClassList, new { @class = "input-120" })
                    @Html.ValidationMessageFor(m => m.ClassId)
                </span>
                <label class="label-53">
                    Section</label>
                <span class="field">
                    @Html.DropDownListFor(m => m.SectionId, Model.SectionList, new { @class = "input-120" })
                    @Html.ValidationMessageFor(m => m.SectionId)
                </span>
            </div>
        </div>
        <div class="lag">
            <label class="label-120">
                Summary</label>
            <span class="field">
                @Html.EditorFor(m => m.Summary)
                @Html.ValidationMessageFor(m => m.Summary)
            </span>
            <div class="clearfix">
            </div>
            <label class="label-120">
                Monthly Bill Detail</label>
            <span class="field">
                @Html.EditorFor(m => m.MonthlyBillDetial)
                @Html.ValidationMessageFor(m => m.MonthlyBillDetial)
            </span>
        </div>
    </div>
    <div class="clearfix">
    </div>
    <div class="lag detailEntryTable" style="height: 250px; width: 100%">
        <table class="listpopup" id="student-ledger-detail" style="width: 100%">
            <thead>
                <tr>
                   
                    <th align="center">
                        @Html.CheckBoxFor(m => m.SelectAll, new { @class = "checkall" })
                    </th>
                    <th width="35%">
                        Student
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Roll No
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StudentinfoList)
                {
                    @Html.Partial("_PartialStudentList", item.FirstOrDefault())
                }</tbody>
        </table>
    </div>
    <div class="clearfix">
    </div> 
  
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#DateFrom, #DateTo").mask("99/99/9999");
    });
   
</script>
