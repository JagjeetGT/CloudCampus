@using KRBAccounting.Service.Models
@using KRBAccounting.Web.CustomFilters
@model KRBAccounting.Web.ViewModels.Student.StudentGeneralInformationViewModel
@{
    var data1 = @Model.SpStudentInfoHeader.FirstOrDefault();
}
<div class="workplace">
 
    <div class="row-fluid">
        <div class="head">
            <h1>
                Student Application Report
            </h1>
            <ul class="buttons">
                <li>
                    <a href="javascript:void(0)" id="generate_report" title="Generate New Report"
                       class="isw-refresh"></a>
                </li>
                <li>
                    <a href="@Url.Action("PdfStudentApplication", "Student")" target="_blank" title="Export to Pdf" class="isw-pdf">
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ExcelStudentApplication", "Student")" target="_blank" title="Export to Excel" class="isw-excel">
                    </a>
                </li>
                <li><a id="print" title="Print" class="isw-print"></a></li>
            </ul>
            <div class="clear">
            </div>
        </div>
        <div class="block-fluid table-sorting">
            @Html.Partial("_PartialReportHeader", Model.ReportHeader)
            <br />
            <p align="left" style="font-weight: bold; float: left;">
                NAME :@data1.Student &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                REGISTRATION NO. :@data1.Regno &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                STUDENT CODE : @data1.StdCode &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                <br />
                CLASS :@data1.Class &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;



                SECTION :@data1.Section  &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                ROLL NO. @data1.Rollno
                <br />
              



                ADDRESS : @data1.TmpAdd, @data1.TmpCity, @data1.TmpDistrict, @data1.TmpCountry

            </p>
            <table cellpadding="0" cellspacing="0" width="100%" class="listpopup" id="leaveapp-list">
                <thead>
                    <tr style="text-align:center">
                        <th width="5%">
                            S.N.
                        </th>
                   
                        <th width="18%">
                            Date From
                        </th>
                        <th width="18%">
                            Date To
                        </th>
                        <th>
                            Approved
                        </th>
                        <th>
                            Reason
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Application
                        </th>
                        <th>
                            Remarks
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1; if (ViewBag.SnStart != null)
                        {
                            i = ViewBag.SnStart;
                        };}
                    @foreach (var item in Model.ScAbsentApplications)
                    {

                        <tr>
                            <td align="center">
                                @i
                            </td>
               
                            <td style="text-align:center">
                                @item.DateFrom.ToShortDateString() A.D. || @item.MitiFrom B.S.
                            </td>
                            <td style="text-align:center">
                                @item.DateTo.ToShortDateString() A.D. || @item.MitiTo B.S.
                            </td>
                            <td style="text-align:center">
                                @item.IsConfirm
                            </td>
                            <td style="text-align:center">
                                @item.Reason
                            </td>
                            <td style="text-align:center">
                                @item.Status
                            </td>
                            <td style="text-align:center">
                                @item.IsApplication
                            </td>
                            <td style="text-align:center">
                                @item.Remarks
                            </td>

                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
    </div>
