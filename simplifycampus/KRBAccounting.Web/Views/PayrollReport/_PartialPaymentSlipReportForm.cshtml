@model KRBAccounting.Web.ViewModels.Payroll.PayementSlipReportFormViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
@using (Html.BeginForm("PaymentSlips", "PayrollReport", new { controller = "PayrollReport" }, FormMethod.Post, new { @class = "form-horizontal", id = "report-form" }))
{
    <div class="lag">
        <div class="lag">
           <div class="lag">
                <label class="label-90">
                    Department</label>
                <span class="field">
                    @Html.DropDownListFor(m => m.DepartmentId, Model.DepartmentList, new { @class = "input-120" })
                    @Html.ValidationMessageFor(m => m.DepartmentId)
                </span>
                 <label class="label-53">
                    Month</label>
                <span class="field">
                    @Html.DropDownListFor(m => m.Month, Model.MonthList, new { @class = "input-120" })
                    @Html.ValidationMessageFor(m => m.Month)
                </span>
            </div>
        </div>
       
    </div>
    <div class="clearfix">
    </div>
    <div class="lag detailEntryTable" style="height: 250px; width: 100%">
        <table class="listpopup" id="student-ledger-detail" style="width: 100%">
            <thead>
                <tr>
                   
                    <th align="center">
                        @Html.CheckBoxFor(m => m.SelectAll, new { @class = "checkall" })
                    </th>
                    <th width="35%">
                        Employee Name
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Post
                    </th>
                    <th>
                        Category
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EmployeeList)
                {
                    @Html.Partial("_PartialEmployeeList", item)
                }</tbody>
        </table>
    </div>
    <div class="clearfix">
    </div> 
  
}
