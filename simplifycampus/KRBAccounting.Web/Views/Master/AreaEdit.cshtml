@model KRBAccounting.Domain.Entities.Area

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@*@Html.CustomValidationSummary("Login was unsuccessful. Please correct the errors and try again.")*@
@using (Ajax.BeginForm("AreaEdit", "Master", new { controller = "Master" }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "MsgError",OnSuccess = "successEdit"}, new { @class = "form-horizontal", id = "area-form" }))
{
    <div id="MsgError"></div>
    @Html.HiddenFor(x=>x.CreatedById)
    @Html.HiddenFor(x => x.CreatedDate)
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.BranchId)
      <div style="width: 445px;">

              <div class="lag">
                  <label class="label-90">
                      Description</label>
                  <span class="field">
                      @Html.TextBoxFor(m => m.AreaName, new { @class = "input-295 input" })
                      @Html.ValidationMessageFor(m => m.AreaName)
                      <span class="loading AreaName">
                    <img title="w_loader_gr.gif" src="/Content/themes/img/loaders/w_loader_gr.gif" /></span>
                  </span>
              </div>
              <div class="lag">
                  <label class="label-90">
                      Short Name</label>
                  <span class="field">
                       @Html.TextBoxFor(m => m.ShorName, new { @class = "input-80 input" })
                      @Html.ValidationMessageFor(m => m.ShorName)
                      <span class="loading ShorName">
                    <img title="w_loader_gr.gif" src="/Content/themes/img/loaders/w_loader_gr.gif" /></span>
                  </span>
              </div>
      
      </div>
}
