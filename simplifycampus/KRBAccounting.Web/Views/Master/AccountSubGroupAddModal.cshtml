@model KRBAccounting.Web.ViewModels.Master.AccountSubGroupViewModel
@{
    ViewBag.Title = "Log On";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@*@Html.CustomValidationSummary("Login was unsuccessful. Please correct the errors and try again.")*@
@using (Ajax.BeginForm("AccountSubGroupAdd", "Master", new { controller = "Master" }, new AjaxOptions { HttpMethod = "Post", OnComplete = "OnComplete" }, new { @class = "form-horizontal", id = "account-subgroup-form" }))
{
    @Html.HiddenFor(x => x.AccountSubGroup.Id)
      <div style="width: 445px;">

              <div class="lag">
                  <label class="label-90">
                      Description</label>
                  <span class="field">
                      @Html.TextBoxFor(m => m.AccountSubGroup.Description, new { @class = "input-295 input" })
                      @Html.ValidationMessageFor(m => m.AccountSubGroup.Description)<span class="loading Description">
                    <img title="w_loader_gr.gif" src="/Content/themes/img/loaders/w_loader_gr.gif" /></span>

                  </span>
              </div>
          <div class="lag">
              <label class="label-90">
                  Group</label>
              <span class="field">
                  @Html.HiddenFor(x => x.AccountSubGroup.AccountGroupId)
                  <input type="text" class = "modallink input" href="@Url.Action("GetAccountGroupList", "Master")" create-href="@Url.Action("AccountGroupAddModal", "Master")" valueId="AccountSubGroup_AccountGroupId" id="subgroup"/>
                  @Html.ValidationMessageFor(m => m.AccountSubGroup.AccountGroupId)
              </span>
          </div>
          <div class="clearfix">
        </div>
        <div class="msg-footer">
            <input type="button" value="Save" class="btn btn-primary" id="save" onclick="ajaxFormSubmit('account-subgroup-form')" />
            <input type="button" class="bClose btn btn-primary"value="Close"/>
            @*<input type="button" id="msgClose" class="btn btn-primary" onclick="$.msg( 'unblock' );$('.msg-body').html('');modalShow(); " value="Close"/>*@
        </div>
      </div>
}
