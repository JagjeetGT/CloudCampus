@using (Ajax.BeginForm("NarrationEdit", "Master", new { controller = "Master" }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "MsgError" , OnSuccess = "successEdit"}, new { @class = "form-horizontal", id = "narration-form" }))
