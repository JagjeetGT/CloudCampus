    <div id=""></div>
    @Html.HiddenFor(x=>x.Narration.Id)
    @Html.HiddenFor(x=>x.Narration.CreatedById)
    @Html.HiddenFor(x=>x.Narration.CreatedDate)
    @Html.HiddenFor(x => x.Narration.BranchId)
