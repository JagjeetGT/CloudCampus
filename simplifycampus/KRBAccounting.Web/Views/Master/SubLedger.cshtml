                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                        Sub Ledger</h1>
                    <ul class="buttons">
                        @if(userRight.Create)
                        {
                            <li><a href="#" class="isw-plus addSubLedger"></a></li>
                        }
                    </ul>
                    <div class="clear">
                    </div>
                </div>
                <div id="subledger-list">
                    @Html.Action("SubLedgerList")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dialog" id="modalSubLedger" style="display: none;" title="Sub Ledger(+)">
