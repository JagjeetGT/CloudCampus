@{
    ViewBag.Title = "Narration";
}
<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                        Narration</h1>
                    <ul class="buttons">
                        <li><a href="#" class="isw-plus addNarration"></a></li>
                    </ul>
                    <div class="clear">
                    </div>
                </div>
                <div id="narration-list">
                    @Html.Action("NarrationList")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dialog" id="modalNarration">
    <div class="block">
    </div>
</div>
<script type="text/javascript">
    function Begin() {
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
    }
    function writeError(control, msg) {
        var err_msg = '<div class="alert-message error"><a class="close" href="#">×</a><p>' + msg + '</p></div>';
        $('#' + control).html(err_msg);
    }
    function getRequest(url) {
        $.ajax({
            url: url,
            context: document.body,
            success: function (data) {
                $('#modalNarration .block').html(data);
                $(this).addClass("done");
                $('#modalNarration').dialog('open');
                $.unblockUI();
            },
            error: function (err) {
                writeError('msgErrorNewLocationDetails', err);
            }
        });
    }

    $('a.addNarration').live('click', function () {
        var url = '@Url.Action("NarrationAdd", "Master")';
        Begin();
        getRequest(url);

        return false;
    });
    $('a.editNarration').live('click', function () {
        var id = $(this).attr("data-id");
        var url = '@Url.Action("NarrationEdit", "Master")/' + id;
        Begin();
        getRequest(url);

        return false;
    });

    $("a.NarrationDelete").live('click', function () {
        var result = confirm('Are you sure want to delete this?');
        if (result) {
            var url = '@Url.Action("NarrationDelete")';
            var id = $(this).attr("data-id");
            var element = $(this);
            $.ajax({
                url: url,
                type: 'post',
                data: { id: id },
                success: function (data) {
                    if (data) {
                        element.closest("tr").remove();
                    } else {
                        alert("could not delete");
                    }
                },
                error: function (err) {
                    writeError('msgErrorNewLocationDetails', err);
                }
            });
        }

    });

    function OnComplete() {

        $("#modalNarration .block").load("/Master/NarrationAdd");
        $("#narration-list").load("/Master/NarrationList");
        $.unblockUI();
    }
    function OnCompleteEdit() {
        $("#modalNarration").dialog("hide");
        $("#narration-list").load("/Master/NarrationList");
        $.unblockUI();
    }
    function success(data) {
        if (data == "True") {
            OnComplete();
        }

    }
    function successEdit(data) {
        if (data == "True") {
            OnCompleteEdit();
        }

    }

    $("#modalNarration").dialog({
        autoOpen: false,
        modal: true,
        width: 'auto',
        title: 'Narration(+)',
        buttons: {
            "Save": function () {
                Begin();
                $("#narration-form").submit();
                $.unblockUI();
            },
            Cancel: function () {
                $(this).dialog("close");
            }
        }
    });
</script>
