@using KRBAccounting.Web.Helpers
@model PagedList<KRBAccounting.Domain.Entities.Narration>
<div class="block-fluid table-sorting">
    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tbl-list">
    <thead>
        <tr>
            <th width="5%">S.N.</th>
            <th width="70%">
                Name
            </th>
            <th width="25%">
                Type
            </th>
            <th width="5%"></th>
            <th width="5%"></th>
        </tr>
     </thead>
        <tbody>
            @{var i = Convert.ToInt32(ViewBag.SnStart);}
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">@i</td>
                    <td>@Utility.TrimText(item.Name, 115)
                    </td>
                    <td>@(Enum.GetName(typeof(KRBAccounting.Enums.NarrationTypeEnum), item.Type).ToString())
                    </td>
                    <td><a href="javascript:void(0);" class="editNarration icon-pencil" data-id="@item.Id" title="Edit: @item.Name"></a></td>
                    <td><a href="javascript:void(0);" class="NarrationDelete icon-remove" data-id="@item.Id" title="Delete"></a></td>
                </tr>
                i++;
            }
        </tbody>
</table>
    <div class="pagination">
        @Html.Raw(Html.AjaxPager(Model, "NarrationList", "Master", new PagerOptions() { PageIndexParameterName = "pageNo", ShowGoButton = false }, new AjaxOptions() { UpdateTargetId = "narration-list"}))
    </div>
</div>


