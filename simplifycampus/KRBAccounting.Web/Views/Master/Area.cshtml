@using KRBAccounting.Service.Models
@{
    ViewBag.Title = "Area";
    var userRight = (UserRight) ViewBag.UserRight;
}
<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                        Area</h1>
                    <ul class="buttons">
                        @if(userRight.Create)
                        {
                               <li><a href="#" class="isw-plus addArea"></a></li>
                        }
                     
                    </ul>
                    <div class="clear">
                    </div>
                </div>
                <div id="area-list">
                    @Html.Action("AreaList")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dialog" id="modalArea" style="display: none;" title="Sales Billing Term(+)">
    <div class="block"></div>
</div>
<script type="text/javascript">
    function Begin() {
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
    }
    function writeError(control, msg) {
        var err_msg = '<div class="alert-message error"><a class="close" href="#">×</a><p>' + msg + '</p></div>';
        $('#' + control).html(err_msg);
    }
    function getRequest(url) {
        $.ajax({
            url: url,
            context: document.body,
            success: function (data) {
                $('#modalArea .block').html(data);
                $(this).addClass("done");
                $('#modalArea').dialog('open');
                $.unblockUI();
            },
            error: function (err) {
                writeError('msgErrorNewLocationDetails', err);
            }
        });
    }

    $('a.addArea').live('click', function () {
        var url = '@Url.Action("AreaAdd", "Master")';
        Begin();
        getRequest(url);

        return false;
    });
    $('a.editArea').live('click', function () {
        var id = $(this).attr("data-id");
        var url = '@Url.Action("AreaEdit", "Master")/' + id;
        Begin();
        getRequest(url);

        return false;
    });

    $("a.AreaDelete").live('click', function () {
        var result = confirm('Are you sure want to delete this?');
        if (result) {
            var url = '@Url.Action("AreaDelete")';
            var id = $(this).attr("data-id");
            var element = $(this);
            $.ajax({
                url: url,
                type: 'post',
                data: { id: id },
                success: function (data) {
                    if (data) {
                        element.closest("tr").remove();
                    } else {
                        alert("could not delete");
                    }
                },
                error: function (err) {
                    writeError('msgErrorNewLocationDetails', err);
                }
            });
        }

    });

    $('#saveArea').live('click', function () {
        $("#area-form").submit();
    });

    function OnComplete() {

        $("#modalArea .block").load("/Master/AreaAdd");
        $("#area-list").load("/Master/AreaList");
        $.unblockUI();
    }
    function OnCompleteEdit() {

        $("#modalArea").dialog("close");
        $("#area-list").load("/Master/AreaList");
        $.unblockUI();
    }

    function success(data) {
        if (data == "True") {
            OnComplete();
        }

    }
    function successEdit(data) {
        if (data == "True") {
            OnCompleteEdit();
        }

    }

    $("#modalArea").dialog({
        autoOpen: false,
        modal: true,
        width: 'auto',
        title: 'Area (+)',
        buttons: {
            "Save": function () {
                Begin();
                $("#area-form").submit();
                $.unblockUI();
            },
            Cancel: function () {
                $(this).dialog("close");
            }
        }
    });

    $("#AreaName").live("focusout", function () {
        if ($(this).val()) {
            if (!$("#ShorName").val()) {
                var name = $(this).val();
                $.getJSON("/Master/GetShortName", { name: name, module: "AR" }, function (data) {
                    $("#ShorName").val(data.shortName.toString());
                });
            }
        }
    });
</script>
