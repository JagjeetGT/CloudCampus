@using KRBAccounting.Service.Models
@{
    ViewBag.Title = "Currency";
    var userRight = (UserRight) ViewBag.UserRight;
}
<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                        Currency</h1>
                    <ul class="buttons">
                        @if(userRight.Create)
                        {
                              <li><a href="#" class="isw-plus addCurrency"></a></li>
                        }
                      
                    </ul>
                    <div class="clear">
                    </div>
                </div>
                <div id="currency-list">
                    @Html.Action("CurrencyList")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dialog" id="modalCurrency" style="display:none">
    <div class="block"></div>
</div>
<script type="text/javascript">
    function Begin() {
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
    }
    function writeError(control, msg) {
        var err_msg = '<div class="alert-message error"><a class="close" href="#">×</a><p>' + msg + '</p></div>';
        $('#' + control).html(err_msg);
    }
    function getRequest(url) {
        $.ajax({
            url: url,
            context: document.body,
            success: function (data) {
                $('#modalCurrency .block').html(data);
                $(this).addClass("done");
                $('#modalCurrency').dialog('open');
                $.unblockUI();
            },
            error: function (err) {
                writeError('msgErrorNewLocationDetails', err);
            }
        });
    }

    $('a.addCurrency').live('click', function () {
        var url = '@Url.Action("CurrencyAdd", "Master")';
        Begin();
        getRequest(url);

        return false;
    });
    $('a.editCurrency').live('click', function () {
        var id = $(this).attr("data-id");
        var url = '@Url.Action("CurrencyEdit", "Master")/' + id;
        Begin();
        getRequest(url);

        return false;
    });

    $("a.CurrencyDelete").live('click', function () {
        var result = confirm('Are you sure want to delete this?');
        if (result) {
            var url = '@Url.Action("CurrencyDelete")';
            var id = $(this).attr("data-id");
            var element = $(this);
            $.ajax({
                url: url,
                type: 'post',
                data: { id: id },
                success: function (data) {
                    if (data) {
                        element.closest("tr").remove();
                    } else {
                        alert("could not delete");
                    }
                },
                error: function (err) {
                    writeError('msgErrorNewLocationDetails', err);
                }
            });
        }

    });

    function OnComplete() {

        $("#modalCurrency .block").load("/Master/CurrencyAdd");
        $("#currency-list").load("/Master/CurrencyList");
        $.unblockUI();
    }
    function OnCompleteEdit() {

        $("#modalCurrency").dialog ("close");
        $("#currency-list").load("/Master/CurrencyList");
        $.unblockUI();
    }
    function success(data) {
        if (data == "True") {
            OnComplete();
        }

    }
    function successEdit(data) {
        if (data == "True") {
            OnCompleteEdit();
        }

    }

    $("#modalCurrency").dialog({
        autoOpen: false,
        modal: true,
        width: 'auto',
        title: 'Currency (+)',
        buttons: {
            "Save": function () {
                Begin();
                $("#currency-form").submit();
                $.unblockUI();
            },
            Cancel: function () {
                $(this).dialog("close");
            }
        }
    });
</script>
