@using KRBAccounting.Service.Models
@{
    ViewBag.Title = "Godown";
    var userRight = (UserRight) ViewBag.UserRight;
}
<div class="workplace">
    <div id="ledger-list">
        <div class="row-fluid">
            <div class="span12">
                <div class="head">
                    <div class="isw-grid">
                    </div>
                    <h1>
                        Godown</h1>
                    <ul class="buttons">
                        @if(userRight.Create)
                        {
                            <li><a href="#" class="isw-plus addGodown"></a></li>
                        }
                        
                    </ul>
                    <div class="clear">
                    </div>
                </div>
                <div id="godown-list">
                    @Html.Action("GodownList")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dialog" id="modalGodown" title='Godown (+)'>
    <div class="block">
    </div>
</div>
<script type="text/javascript">
    function Begin() {
        $.blockUI({
            message: 'Please Wait..',
            css: {
                border: 'none',
                padding: '15px',
                backgroundColor: '#fff',
                '-webkit-border-radius': '10px',
                '-moz-border-radius': '10px',
                color: '#000'
            }
        });
    }
    function writeError(control, msg) {
        var err_msg = '<div class="alert-message error"><a class="close" href="#">×</a><p>' + msg + '</p></div>';
        $('#' + control).html(err_msg);
    }
    function getRequest(url) {
        $.ajax({
            url: url,
            context: document.body,
            success: function (data) {
                $('#modalGodown .block').html(data);
                $(this).addClass("done");
                $('#modalGodown').dialog('open');
                $.unblockUI();
            },
            error: function (err) {
                writeError('msgErrorNewLocationDetails', err);
            }
        });
    }

    $('a.addGodown').live('click', function () {
        var url = '@Url.Action("GodownAdd", "Master")';
        Begin();
        getRequest(url);

        return false;
    });
    $('a.editGodown').live('click', function () {
        var id = $(this).attr("data-id");
        var url = '@Url.Action("GodownEdit", "Master")/' + id;
        Begin();
        getRequest(url);

        return false;
    });

    $("a.GodownDelete").live('click', function () {
        var result = confirm('Are you sure want to delete this?');
        if (result) {
            var url = '@Url.Action("GodownDelete")';
            var id = $(this).attr("data-id");
            var element = $(this);
            $.ajax({
                url: url,
                type: 'post',
                data: { id: id },
                success: function (data) {
                    if (data) {
                        element.closest("tr").remove();
                    } else {
                        alert("could not delete");
                    }
                },
                error: function (err) {
                    writeError('msgErrorNewLocationDetails', err);
                }
            });
        }

    });

    function OnComplete() {

        $("#modalGodown .block").load("/Master/GodownAdd");
        $("#godown-list").load("/Master/GodownList");
        $.unblockUI();
    }
    function OnCompleteEdit() {

        $("#modalGodown").dialog("close");
        $("#godown-list").load("/Master/GodownList");
        $.unblockUI();
    }

    function success(data) {
        
        if (data == "True") {
            OnComplete();
        }

    }
    function successEdit(data) {
        alert(data);
        if (data == "True") {
            OnCompleteEdit();
        }

    }

    $("#modalGodown").dialog({
        autoOpen: false,
        modal: true,
        width: 'auto',
        buttons: {
            "Save": function () {
                Begin();
                $("#godown-form").submit();
                $.unblockUI();
            },
            Cancel: function () {
                $(this).dialog("close");
            }
        }
    });

    $("#Name").live("focusout", function () {
        if ($(this).val()) {
            if (!$("#ShortName").val()) {
                var name = $(this).val();
                $.getJSON("/Master/GetShortName", { name: name, module: "GD" }, function (data) {
                    $("#ShortName").val(data.shortName.toString());
                });
            }
        }
    });
</script>
